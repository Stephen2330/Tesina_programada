@model Soporte_averias.Models.TBL_PeriodoGarantia

@{
	ViewBag.Title = "Nuevo periodo de garantía";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="barlow-regular barlow-semibold">@ViewBag.Title</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="custom-card">
		<h5 class="custom-card-header">Garantía</h5>
		<div class="custom-card-body">
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })

			<div class="form-group">
				<i class="fa fa-calendar-days fa-iconos"></i>
				@Html.LabelFor(model => model.TC_PeriodoGarantia, "Periodo de garantía", htmlAttributes: new { @class = "control-label titulo_detalles" })
				@Html.EditorFor(model => model.TC_PeriodoGarantia, new { htmlAttributes = new { @class = "form-control", placeholder = "Escribe periodo", @required = true } })
				@Html.ValidationMessageFor(model => model.TC_PeriodoGarantia, "", new { @class = "text-danger" })
			</div>

			<div class="form-group">
				<i class="fa-regular fa-note-sticky"></i>
				@Html.LabelFor(model => model.TC_Descripcion, "Descripción", htmlAttributes: new { @class = "control-label titulo_detalles" })
				@Html.EditorFor(model => model.TC_Descripcion, new { htmlAttributes = new { @class = "form-control", placeholder = "Escribe descripción", @required = true } })
				@Html.ValidationMessageFor(model => model.TC_Descripcion, "", new { @class = "text-danger" })
			</div>
			

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<button type="submit" class="btn btn-secondary btn_add">
						<i class="fa fa-plus"></i> 
					</button>
				</div>
			</div>
		</div>
	</div>
}

<br />
<div>
	<a class="btn_back btn btn-secondary btn-separator" href="@Url.Action("Index", "PeriodoGarantia")">
		<i class="fa fa-undo" aria-hidden="true"></i> 
	</a>
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}

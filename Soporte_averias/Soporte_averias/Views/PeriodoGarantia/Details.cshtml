@model Soporte_averias.Models.TBL_PeriodoGarantia

@{
	ViewBag.Title = "Detalles periodo de garantía";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="barlow-regular barlow-semibold">@ViewBag.Title</h2>


			<div class="custom-card">
					<h5 class="custom-card-header"> Garantía</h5>
				<div class="custom-card-body">
					<hr />
					<dl class="dl-horizontal titulo_dl">
						<dt><i class="fa-solid fa-calendar-days"></i> Periodo de garantía</dt>
						<dd>@Html.DisplayFor(model => model.TC_PeriodoGarantia)</dd>
						<br />
						<dt><i class="fa-solid fa-note-sticky"></i> Descripción</dt>
						<dd>@Html.DisplayFor(model => model.TC_Descripcion)</dd>
					</dl>
				</div>
			</div>


<div >

	<a class="btn btn-secondary btn_edit btn-separator" href="@Url.Action("Edit","PeriodoGarantia", new { id = Model.TN_IdPeriodoGarantia })">
		<i class="fa-solid fa-pen-to-square" ></i>
	</a>
	

</div>

<a class="btn btn-secondary btn_back" href="@Url.Action("Index", "PeriodoGarantia")">
	<i class="fa-solid fa-undo" aria-hidden="true"></i>
</a>




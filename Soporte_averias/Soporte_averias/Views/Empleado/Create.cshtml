@model Soporte_averias.Models.TBL_Empleado

@{
	ViewBag.Title = "Nuevo empleado";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="barlow-regular barlow-semibold">@ViewBag.Title</h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="custom-card">
			<h5 class="custom-card-header">
				Empleado

			</h5>
		<div class="card-body">
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<div class="form-group">
				<i class="fa-solid fa-id-card"></i>
				@Html.LabelFor(model => model.TN_Cedula, "Cédula", htmlAttributes: new { @class = "control-label col-md-2 titulo_detalles" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.TN_Cedula, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 1, @placeholder = "Escribe cédula (sólo dígitos)" } })
					@Html.ValidationMessageFor(model => model.TN_Cedula, "", new { @class = "text-danger" })
				</div>
			</div>
			<br />
			<div class="form-group">
				<i class="fa-solid fa-circle-user"></i>
				@Html.LabelFor(model => model.TC_Nombre, "Nombre", htmlAttributes: new { @class = "control-label col-md-2 titulo_detalles" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.TC_Nombre, new { htmlAttributes = new { @class = "form-control",  @placeholder = "Escribe nombre " } })
					@Html.ValidationMessageFor(model => model.TC_Nombre, "", new { @class = "text-danger" })
				</div>
			</div>
			<br />
			<div class="form-group">
				<i class="fa-solid fa-circle-user"></i>
				@Html.LabelFor(model => model.TC_PrimerApellido, "Primer apellido", htmlAttributes: new { @class = "control-label col-md-2 titulo_detalles" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.TC_PrimerApellido, new { htmlAttributes = new { @class = "form-control",  @placeholder = "Escribe primer apellido" } })
					@Html.ValidationMessageFor(model => model.TC_PrimerApellido, "", new { @class = "text-danger" })
				</div>
			</div>
			<br />
			<div class="form-group">
				<i class="fa-solid fa-circle-user"></i>
				@Html.LabelFor(model => model.TC_SegundoApellido, "Segundo apellido", htmlAttributes: new { @class = "control-label col-md-2 titulo_detalles" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.TC_SegundoApellido, new { htmlAttributes = new { @class = "form-control",  @placeholder = "Escribe segundo apellido" } })
					@Html.ValidationMessageFor(model => model.TC_SegundoApellido, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<button type="submit" class="btn btn-secondary btn_add">
						<i class="fa fa-plus"></i>

					</button>
				</div>
			</div>

		</div>
	</div>
}

<br />

<div>
	<a class="btn_back btn btn-secondary btn-separator" href="@Url.Action("Index", "Empleado")">
		<i class="fa fa-undo" aria-hidden="true"></i>


	</a>
</div>


@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
